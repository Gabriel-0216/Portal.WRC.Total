@model Portal.WRC.Total.com.Models.Noticia

@{
    ViewData["Title"] = "Delete";
}


<h3>Tem certeza que quer deletar essa notícia?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ntc_titulo_noticia)
        </dd>
        <dt class = "col-sm-2">
           Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ntc_curta_descricao)
        </dd>
        <dt class = "col-sm-2">
            Texto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ntc_texto_noticia)
        </dd>
        <dt class = "col-sm-2">
            País
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ntc_pais_rally)
        </dd>
        <dt class = "col-sm-2">
           Data inserção registro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ntc_data_insercao)
        </dd>
        <dt class = "col-sm-2">
           Data de atualização
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ntc_data_atualizacao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Retornar</a>
    </form>
</div>
