@model Portal.WRC.Total.com.Models.Noticia

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Noticia</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ntc_titulo_noticia)
        </dd>
        <dt class = "col-sm-2">
            Descrição rápida:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ntc_curta_descricao)
        </dd>
        <dt class = "col-sm-2">
            Texto completo:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ntc_texto_noticia)
        </dd>
        <dt class = "col-sm-2">
            País:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ntc_pais_rally)
        </dd>
        <dt class = "col-sm-2">
            Data de inserção:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ntc_data_insercao)
        </dd>
        <dt class = "col-sm-2">
            Data de atualização:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ntc_data_atualizacao)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Retornar</a>
</div>
