@model Noticia
@{
    ViewData["Title"] = "Home";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portal.WRC.Total.com</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <table class="table-bordered" id="GridIndexNoticias">
        <thead>
        </thead>
        <tbody>     
                <tr>
                    <td>
                        <b>@Html.DisplayFor(modelItem => Model.ntc_titulo_noticia)</b>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.ntc_curta_descricao)
                    </td>
                    <td>
                    <td>
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.Id">Mais detalhes</a>
                    </td>
                  
                </tr>
                
        </tbody>
    </table>
        

    <section id="botaoTodasNoticias">
        <p><a class="btn btn-primary" asp-action="Index">Ver todas as notícias</a></p>
    </section>       
        
    
    <section id="ultimoVideo">
        <h4>Assista ao último vídeo do canal oficial do World Rally Championship</h4>
        <iframe width="600" height="340" src="https://www.youtube.com/embed?max-results=1&controls=0&showinfo=0&rel=0&listType=user_uploads&list=wrc" frameborder="0" allowfullscreen></iframe>
    </section>


</body>


