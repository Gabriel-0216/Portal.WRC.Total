@model Portal.WRC.Total.com.Models.Piloto

@{
    ViewData["Title"] = "Delete";
}

<h3>Tem certeza que quer deletar?</h3>
<div>
    <h4>Piloto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.plt_nome_curto)
        </dd>
        <dt class = "col-sm-2">
            Nome completo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.plt_nome_completo)
        </dd>
        <dt class = "col-sm-2">
            Data Nascimento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.plt_data_nascimento)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Estou ciente dos riscos e quero continuar" class="btn btn-danger" /> |
        <a asp-action="Index">Retornar</a>
    </form>
</div>
